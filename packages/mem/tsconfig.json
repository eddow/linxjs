{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es6",
		"lib": ["es2015", "dom"]
	},
	"include": ["src/**/*"],
	"exclude": ["dist"]
}
